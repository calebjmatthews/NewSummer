{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outFile": "app/static/bundle.js"
  },
  "files": [
    "app/static/ts/references.ts",
    "typings/index.d.ts"
  ],
  "include": [
    "app/static/ts/*"
  ],
  "exclude": ["typings"]
}